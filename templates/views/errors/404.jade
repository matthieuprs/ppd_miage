extends ../../layouts/default

block content
	.container-sm: .pv-2
		h1!=errorTitle || 'Not found (404)'
		if 'object' == typeof errorMsg
			div(style='margin: 30px 0;').debug!= htmlStringify(errorMsg)
		else
			p.lead!= utils.textToHTML(errorMsg) || 'Si vous êtes sur cette page, vous savez surement ce que cela signifie.'
		p: a(href='/').btn.btn-primary.btn-lg Retourner à l'accueil
